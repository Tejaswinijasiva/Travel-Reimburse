                        </li>
                         
                    </ul>
                </div>
            </div>
        </nav>
     </header>


         <div class="mt-4 col-md-12 text-center">
            <a class="btn btn-outline-primary btn-rounded "asp-action="Create" asp-controller="Details"
              style="border-radius: 15px;padding-left: 50px;padding-right: 50px;margin: 10px;">Request</a>
         </div>
       <!-- <a asp-action="Create" asp-controller="Details" class="btn btn-success">Create</a>-->
   
<h1>Details</h1>
     <table class="table">
            <thead  class="text-info bg-dark">
                <tr>
                    <td>ID</td>
                    <td>DEPARTMENT</td>
                    <td>PROJECT</td>
                    <td>COUNTRY</td>
                    <td>FROMDATE</td>
                    <td>TODATE</td>
                    <td>DATE</td>   
                    <td>MODE</td>
                    <td>TOTALAMOUNT</td>
                    <td>MANAGE</td>
                   
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                    <td>@item.Id</td>
                     <td>@item.Department</td>
                      <td>@item.Project</td>
                      <td>@item.Country</td>
                     <td>@item.Fromdate  </td>
                      <td>@item.Todate  </td>
                       <td>@item.Date  </td>
                   <td>@item.Mode</td>
                    <td>@item.Totalamount </td> 
                     @* <td>@item.Status</td>      *@
                    <td><a class="btn btn-primary btn-sm" href="Details/View/@item.Id">View</a></td>
                    @* <td><a  asp-action="Delete" asp-controller="Details" asp-route-id="@item.Id"><i style="font-size:18px;color: rgb(128, 17, 0);" class="glyphicon">&#xe020;</i></a></td> *@
                    
                    </tr>
                }
            </tbody>

        </table>

       
       
       <footer class="border-top text-white fixed-bottom">
        <div class="container mt-2">
         <div class="row">
            <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                <h4>Travel Reimbursement</h4>
