@model Travel_Reimbursement.Models.LoginModel
@{
    ViewData["Title"]="Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel_Reimbursement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Travel_Reimbursement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
     <header class="position-sticky top-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-blue" asp-area="" asp-controller="Home" asp-action="Index">Travel_Reimbursement</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                 <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link fw-bold text-blue" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        @* <li class="nav-item">
                            <a class="nav-link fw-bold text-blue" asp-area="" asp-controller="ManagerAccount" asp-action="LoginManager">ManagerLogin</a>
                        </li> *@
                         <li class="nav-item">
                            <a class="nav-link fw-bold text-blue" asp-area="" asp-controller="Accounts" asp-action="Login">Employees</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
     </header>

<div class="container">
    <div class="row shadow rounded">
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div>
                <img src="https://www.incimages.com/uploaded_files/image/1920x1080/getty_187124870_2000171020009280139_117363.jpg" class="w-100">
            </div>
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <form autocomplete="off" method="post" class="m-3 p-3">
            <div class="mb-3">
                <h2 class="text-pink">Login</h2>
            </div>
            <div class="mb-3 text-danger">
                @Html.ValidationSummary()
            </div>
            <div class="form-floating mb-3">
                @Html.TextBoxFor(m=>m.Email, new {@class="form-control",placeholder="Email"})
                <label  for="Email">Email</label>
                @Html.ValidationMessageFor(m=>m.Email,"",new{@class="badge badge-danger"})
            </div>
            
              <div class="form-floating mb-3">
                @Html.TextBoxFor(m=>m.Password, new {@class="form-control",placeholder="Password",type="password"})
                <label  for="Password">Password</label>
                 @Html.ValidationMessageFor(m=>m.Password,"",new{@class="badge badge-danger"})
            </div>
            <div class="mb-3">
                <button class="btn btn-sm btn-dark w-100 p-2 shadow rounded" type="submit">Login</button>
            </div>
            <div class="mb-3">
                <span>Don't have an account?</span><a asp-controller="Accounts" asp-action="Register" class="text-decoration-none text-dark"  style="font-weight:bold">Register here</a>
            </div>
            </form>

        </div> 
        
    </div>
</div>
<footer class="border-top text-white fixed-bottom">
        <div class="container mt-2">
         <div class="row">
            <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                <h4>Travel Reimbursement</h4>
                <pre>Security</pre>
                <pre>Protection</pre>
                <pre>Saved</pre>
             
            </div>
            <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                <h4>Contact Us</h4>
                <div class="mt-3 mb-2">
                    <span><i class="fa-brands fa-instagram fs-5"></i></span>
                    <span class="fs-6 mx-1"><a href="https://instagram.com/aspire_systems?igshid=YmMyMTA2M2Y= "> Instagram</a></span>
                </div>
                 <div class="mb-2">
                    <span><i class="fa-brands fa-youtube fs-5"></i></span>
                    <span class="fs-6 mx-1"><a href="https://youtube.com/Aspiresys">YouTube</a></span>
                </div>
                 <div class="mb-2"> 
                    <span><i class="fa-brands fa-facebook fs-5"></i></span>
                    <span class="fs-6 mx-1"><a href="https://www.facebook.com/AspireSystems?mibextid=ZbWKwL">Facebook</a></span>
                </div> 
                 <div class="mb-2">
                    <span><i class="fa-regular fa-linkedin fs-5"></i></span>
                    <span class="fs-6 mx-1"><a href="https://www.linkedin.com/company/aspire-systems/">LinkedIn</a></span>
                </div>
                @* <div class="mb-2">
                    <span><i class="fa-regular fa-envelope fs-5"></i></span>
                    <span class="fs-6 mx-1"><a href="mailto:aspiresys@gmail.com"> Mail</a></span>
                </div> *@
            </div>
            <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                <h4>Address</h4>
                <pre>Aspire Systems</pre>
                <pre>Chennai, Siruseri, TamilNadu, India</pre>    
            </div>
         </div>
       <!--  <div>
            <h3  class="text-center">Powered By Gayathri</h3>
         </div>-->
          </div>
    </footer> 


</body>
</html>

<script src="~/lib/jquery/dist/jqery.min.js"></script>